{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "conf-common",
      "description": "General settings that apply to all configurations",
      "hidden": true,
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "conf-debug",
      "description": "Debug build settings",
      "hidden": true,
      "inherits": "conf-common",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "conf-release",
      "description": "Release build settings",
      "hidden": true,
      "inherits": "conf-common",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "conf-relwithdebinfo",
      "description": "Release build with debug info settings",
      "hidden": true,
      "inherits": "conf-common",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "conf-windows-common",
      "description": "Windows settings for MSBuild toolchain.",
      "hidden": true,
      "inherits": "conf-common",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "toolset": {
        "value": "host=x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CPACK_GENERATOR": "NSIS"
      }
    },
    {
      "name": "conf-unixlike-common",
      "description": "Unix-like OS settings for gcc and clang toolchains",
      "hidden": true,
      "inherits": "conf-common",
      "condition": {
        "type": "inList",
        "string": "${hostSystemName}",
        "list": [
          "Linux",
          "Darwin"
        ]
      },
      "vendor": {
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
          "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
        }
      }
    },
    {
      "name": "conf-unixlike-clang-common",
      "description": "Common settings for clang compiler on Unix-like OS",
      "hidden": true,
      "inherits": "conf-unixlike-common",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_CXX_FLAGS": "-stdlib=libstdc++"
      }
    },
    {
      "name": "conf-unixlike-gcc-common",
      "description": "Common settings for gcc compiler on Unix-like OS",
      "hidden": true,
      "inherits": "conf-unixlike-common",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "conf-windows-msvc-debug",
      "displayName": "msvc Debug (User Mode)",
      "description": "Target Windows with the msvc compiler, debug build type",
      "inherits": [
        "conf-windows-common",
        "conf-debug"
      ]
    },
    {
      "name": "conf-windows-msvc-release",
      "displayName": "msvc Release (User Mode)",
      "description": "Target Windows with the msvc compiler, release build type",
      "inherits": [
        "conf-windows-common",
        "conf-release"
      ]
    },
    {
      "name": "conf-unixlike-gcc-debug",
      "displayName": "gcc Debug",
      "description": "Target Unix-like OS with the gcc compiler, debug build type",
      "inherits": [
        "conf-unixlike-gcc-common",
        "conf-debug"
      ]
    },
    {
      "name": "conf-unixlike-gcc-relwithdebinfo",
      "displayName": "gcc RelWithDebInfo",
      "description": "Target Unix-like OS with the gcc compiler, release with debug info build type",
      "inherits": [
        "conf-unixlike-gcc-common",
        "conf-relwithdebinfo"
      ]
    },
    {
      "name": "conf-unixlike-gcc-release",
      "displayName": "gcc Release",
      "description": "Target Unix-like OS with the gcc compiler, release build type",
      "inherits": [
        "conf-unixlike-gcc-common",
        "conf-release"
      ]
    },
    {
      "name": "conf-unixlike-clang-debug",
      "displayName": "clang Debug",
      "description": "Target Unix-like OS with the clang compiler, debug build type",
      "inherits": [
        "conf-unixlike-clang-common",
        "conf-debug"
      ]
    },
    {
      "name": "conf-unixlike-clang-relwithdebinfo",
      "displayName": "clang RelWithDebInfo",
      "description": "Target Unix-like OS with the clang compiler, release with debug info build type",
      "inherits": [
        "conf-unixlike-clang-common",
        "conf-relwithdebinfo"
      ]
    },
    {
      "name": "conf-unixlike-clang-release",
      "displayName": "clang Release",
      "description": "Target Unix-like OS with the clang compiler, release build type",
      "inherits": [
        "conf-unixlike-clang-common",
        "conf-release"
      ]
    },
    {
      "name": "conf-unixlike-asan-common",
      "description": "Common AddressSanitizer settings for Unix-like OS",
      "hidden": true,
      "inherits": "conf-unixlike-common",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-fsanitize=address -fno-omit-frame-pointer -g",
        "CMAKE_C_FLAGS": "-fsanitize=address -fno-omit-frame-pointer -g",
        "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=address",
        "CMAKE_SHARED_LINKER_FLAGS": "-fsanitize=address",
        "CMAKE_MODULE_LINKER_FLAGS": "-fsanitize=address",
        "CMAKE_STATIC_LINKER_FLAGS": ""
      }
    },
    {
      "name": "conf-unixlike-tsan-common",
      "description": "Common ThreadSanitizer settings for Unix-like OS",
      "hidden": true,
      "inherits": "conf-unixlike-common",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-fsanitize=thread -g",
        "CMAKE_C_FLAGS": "-fsanitize=thread -g",
        "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=thread",
        "CMAKE_SHARED_LINKER_FLAGS": "-fsanitize=thread",
        "CMAKE_MODULE_LINKER_FLAGS": "-fsanitize=thread",
        "CMAKE_STATIC_LINKER_FLAGS": ""
      }
    },
    {
      "name": "conf-unixlike-ubsan-common",
      "description": "Common UndefinedBehaviorSanitizer settings for Unix-like OS",
      "hidden": true,
      "inherits": "conf-unixlike-common",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-fsanitize=undefined -fno-omit-frame-pointer -g",
        "CMAKE_C_FLAGS": "-fsanitize=undefined -fno-omit-frame-pointer -g",
        "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=undefined",
        "CMAKE_SHARED_LINKER_FLAGS": "-fsanitize=undefined",
        "CMAKE_MODULE_LINKER_FLAGS": "-fsanitize=undefined",
        "CMAKE_STATIC_LINKER_FLAGS": ""
      }
    },
    {
      "name": "conf-unixlike-coverage-common",
      "description": "Common code coverage settings for Unix-like OS with GCC",
      "hidden": true,
      "inherits": "conf-unixlike-gcc-common",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "--coverage -O0 -g",
        "CMAKE_C_FLAGS": "--coverage -O0 -g",
        "CMAKE_EXE_LINKER_FLAGS": "--coverage",
        "CMAKE_SHARED_LINKER_FLAGS": "--coverage",
        "CMAKE_MODULE_LINKER_FLAGS": "--coverage"
      }
    },
    {
      "name": "conf-unixlike-gcc-debug-asan",
      "displayName": "gcc Debug + AddressSanitizer",
      "description": "Debug build with AddressSanitizer for memory error detection",
      "inherits": [
        "conf-unixlike-gcc-debug",
        "conf-unixlike-asan-common"
      ]
    },
    {
      "name": "conf-unixlike-gcc-debug-tsan",
      "displayName": "gcc Debug + ThreadSanitizer",
      "description": "Debug build with ThreadSanitizer for data race detection",
      "inherits": [
        "conf-unixlike-gcc-debug",
        "conf-unixlike-tsan-common"
      ]
    },
    {
      "name": "conf-unixlike-gcc-debug-ubsan",
      "displayName": "gcc Debug + UndefinedBehaviorSanitizer",
      "description": "Debug build with UndefinedBehaviorSanitizer for undefined behavior detection",
      "inherits": [
        "conf-unixlike-gcc-debug",
        "conf-unixlike-ubsan-common"
      ]
    },
    {
      "name": "conf-unixlike-gcc-relwithdebinfo-asan",
      "displayName": "gcc RelWithDebInfo + AddressSanitizer",
      "description": "RelWithDebInfo build with AddressSanitizer for memory error detection",
      "inherits": [
        "conf-unixlike-gcc-relwithdebinfo",
        "conf-unixlike-asan-common"
      ]
    },
    {
      "name": "conf-unixlike-gcc-relwithdebinfo-tsan",
      "displayName": "gcc RelWithDebInfo + ThreadSanitizer",
      "description": "RelWithDebInfo build with ThreadSanitizer for data race detection",
      "inherits": [
        "conf-unixlike-gcc-relwithdebinfo",
        "conf-unixlike-tsan-common"
      ]
    },
    {
      "name": "conf-unixlike-gcc-relwithdebinfo-ubsan",
      "displayName": "gcc RelWithDebInfo + UndefinedBehaviorSanitizer",
      "description": "RelWithDebInfo build with UndefinedBehaviorSanitizer for undefined behavior detection",
      "inherits": [
        "conf-unixlike-gcc-relwithdebinfo",
        "conf-unixlike-ubsan-common"
      ]
    },
    {
      "name": "conf-unixlike-gcc-coverage",
      "displayName": "gcc Coverage",
      "description": "Debug build with code coverage instrumentation for lcov/gcov",
      "inherits": [
        "conf-unixlike-gcc-debug",
        "conf-unixlike-coverage-common"
      ]
    },
    {
      "name": "conf-unixlike-clang-debug-asan",
      "displayName": "clang Debug + AddressSanitizer",
      "description": "Debug build with AddressSanitizer for memory error detection",
      "inherits": [
        "conf-unixlike-clang-debug",
        "conf-unixlike-asan-common"
      ],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-stdlib=libstdc++ -fsanitize=address -fno-omit-frame-pointer -g"
      }
    },
    {
      "name": "conf-unixlike-clang-debug-tsan",
      "displayName": "clang Debug + ThreadSanitizer",
      "description": "Debug build with ThreadSanitizer for data race detection",
      "inherits": [
        "conf-unixlike-clang-debug",
        "conf-unixlike-tsan-common"
      ],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-stdlib=libstdc++ -fsanitize=thread -g"
      }
    },
    {
      "name": "conf-unixlike-clang-debug-ubsan",
      "displayName": "clang Debug + UndefinedBehaviorSanitizer",
      "description": "Debug build with UndefinedBehaviorSanitizer for undefined behavior detection",
      "inherits": [
        "conf-unixlike-clang-debug",
        "conf-unixlike-ubsan-common"
      ],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-stdlib=libstdc++ -fsanitize=undefined -fno-omit-frame-pointer -g"
      }
    },
    {
      "name": "conf-unixlike-clang-relwithdebinfo-asan",
      "displayName": "clang RelWithDebInfo + AddressSanitizer",
      "description": "RelWithDebInfo build with AddressSanitizer for memory error detection",
      "inherits": [
        "conf-unixlike-clang-relwithdebinfo",
        "conf-unixlike-asan-common"
      ],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-stdlib=libstdc++ -fsanitize=address -fno-omit-frame-pointer -g"
      }
    },
    {
      "name": "conf-unixlike-clang-relwithdebinfo-tsan",
      "displayName": "clang RelWithDebInfo + ThreadSanitizer",
      "description": "RelWithDebInfo build with ThreadSanitizer for data race detection",
      "inherits": [
        "conf-unixlike-clang-relwithdebinfo",
        "conf-unixlike-tsan-common"
      ],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-stdlib=libstdc++ -fsanitize=thread -g"
      }
    },
    {
      "name": "conf-unixlike-clang-relwithdebinfo-ubsan",
      "displayName": "clang RelWithDebInfo + UndefinedBehaviorSanitizer",
      "description": "RelWithDebInfo build with UndefinedBehaviorSanitizer for undefined behavior detection",
      "inherits": [
        "conf-unixlike-clang-relwithdebinfo",
        "conf-unixlike-ubsan-common"
      ],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-stdlib=libstdc++ -fsanitize=undefined -fno-omit-frame-pointer -g"
      }
    }
  ],
